<div class="modal fade" id="{{name}}Module" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-custom {{specificClass}}">
            <div class="modal-header border-custom {{specificClass}} justify-content-center">
                <h4 class="modal-title text-center">{{name}}</h4>

                <div style="right: 3%; z-index: 10" class="position-absolute">
                    <a role="button" class="link-light text-decoration-none" tabindex="0" data-bs-html=true data-bs-trigger="focus" data-bs-container="body" data-bs-placement="left" data-bs-toggle="popover" title="Dicas" data-bs-content="<strong>[0]</strong> Arquivo 2: Papel;<br><strong>[1]</strong> Dobre o papel;<br><strong>[2]</strong> _ _ 6 _ - _ H">
                        <i class="far fa-question-circle align-middle h3 m-0"></i>
                    </a>

                    <a role="button" class="link-light ms-2 text-decoration-none" data-bs-dismiss="modal">
                        <i class="fas fa-times align-middle h3 m-0"></i>
                    </a>
                </div>

            </div>
            {{#if isDone}}
                <div id="{{name}}BodyDone" class="modal-body">
                    <div class="row justify-content-center text-center" style="font-size: 25px">
                        <h6>Módulo Finalizado</h6>
                        <h6>Informação Recuperada</h6>
                        <div class="col-sm-5">
                            <img class="img-fluid" src="/system10c/assets/beta/done.jpg?assetsVersion={{@root.assetsVersion}}">
                        </div>
                    </div>
                </div>
            {{else}}
                <div id="{{name}}BodyNot" class="modal-body">
                    <div class="row justify-content-center text-center">
                        <div class="col-12">
                            <h4 class="mb-1">Sequência</h4>
                            <h5 class="mb-3">6 G - 2 1 - 8 B - 7 3 - D 4</h5>

                            <hr>
   
                            <div class="row justify-content-center text-center mb-3">


                                <div class="col-sm-2">
                                    <button id="buttonBetaSubmit" type="button" class="btn btn-outline-light mb-1" onclick="betaSubmit()">Enviar</button>
                                </div>

                                <div class="w-100"></div>

                                <div class="col-sm-2 my-2">
                                    <h5 id="countdownBeta" class="d-none">30</h5>
                                </div>

                                
                                <div class="w-100"></div>
                            
                                
                                <input type="radio" name="betaRadio" class="d-none" value="0" autocomplete="off" checked>

                                <div class="col-sm-4 mb-2">
                                    <input type="radio" name="betaRadio" class="btn-check" value="1" id="btn-check-beta-1" autocomplete="off">
                                    <label class="btn btn-outline-check" id="label-check-beta-1" for="btn-check-beta-1">
                                        <img class="img-fluid" src="/system10c/assets/gama/1.png?assetsVersion={{@root.assetsVersion}}">
                                    </label>
                                </div>

                                <div class="col-sm-4 mb-2">
                                    <input type="radio" name="betaRadio" class="btn-check" value="2" id="btn-check-beta-2" autocomplete="off">
                                    <label class="btn btn-outline-check" id="label-check-beta-2" for="btn-check-beta-2">
                                        <img class="img-fluid" src="/system10c/assets/gama/2.png?assetsVersion={{@root.assetsVersion}}">
                                    </label>
                                </div>

                                <div class="col-sm-4 mb-2">
                                    <input type="radio" name="betaRadio" class="btn-check" value="3" id="btn-check-beta-3" autocomplete="off">
                                    <label class="btn btn-outline-check" id="label-check-beta-3" for="btn-check-beta-3">
                                        <img class="img-fluid" src="/system10c/assets/gama/3.png?assetsVersion={{@root.assetsVersion}}">
                                    </label>
                                </div>

                                <div class="col-sm-4 mb-2">
                                    <input type="radio" name="betaRadio" class="btn-check" value="4" id="btn-check-beta-4" autocomplete="off">
                                    <label class="btn btn-outline-check" id="label-check-beta-4" for="btn-check-beta-4">
                                        <img class="img-fluid" src="/system10c/assets/gama/4.png?assetsVersion={{@root.assetsVersion}}">
                                    </label>
                                </div>

                                <div class="col-sm-4 mb-2">
                                    <input type="radio" name="betaRadio" class="btn-check" value="5" id="btn-check-beta-5" autocomplete="off">
                                    <label class="btn btn-outline-check" id="label-check-beta-5" for="btn-check-beta-5">
                                        <img class="img-fluid" src="/system10c/assets/gama/5.png?assetsVersion={{@root.assetsVersion}}">
                                    </label>
                                </div>

                                <div class="col-sm-4 mb-2">
                                    <input type="radio" name="betaRadio" class="btn-check" value="6" id="btn-check-beta-6" autocomplete="off">
                                    <label class="btn btn-outline-check" id="label-check-beta-6" for="btn-check-beta-6">
                                        <img class="img-fluid" src="/system10c/assets/gama/6.png?assetsVersion={{@root.assetsVersion}}">
                                    </label>
                                </div>

                                <div class="col-sm-4 mb-2">
                                    <input type="radio" name="betaRadio" class="btn-check" value="7" id="btn-check-beta-7" autocomplete="off">
                                    <label class="btn btn-outline-check" id="label-check-beta-7" for="btn-check-beta-7">
                                        <img class="img-fluid" src="/system10c/assets/gama/7.png?assetsVersion={{@root.assetsVersion}}">
                                    </label>
                                </div>

                                <div class="col-sm-4 mb-2">
                                    <input type="radio" name="betaRadio" class="btn-check" value="8" id="btn-check-beta-8" autocomplete="off">
                                    <label class="btn btn-outline-check" id="label-check-beta-8" for="btn-check-beta-8">
                                        <img class="img-fluid" src="/system10c/assets/gama/8.png?assetsVersion={{@root.assetsVersion}}">
                                    </label>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>

                <div id="{{name}}BodyDone" class="modal-body d-none">
                    <div class="row justify-content-center text-center" style="font-size: 25px">
                        <h6>Módulo Finalizado</h6>
                        <h6>Informação Recuperada</h6>
                        <div class="col-sm-5">
                            <img class="img-fluid" src="/system10c/assets/beta/done.jpg?assetsVersion={{@root.assetsVersion}}">
                        </div>
                    </div>
                </div>

            {{/if}}
        </div>
    </div>
</div> 