<div class="modal fade" id="{{name}}Module" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content border-custom {{specificClass}}">
            <div class="modal-header border-custom {{specificClass}} justify-content-center">
                <h4 class="modal-title text-center">{{name}}</h4>

                <div style="right: 3%; z-index: 10" class="position-absolute">
                    <a role="button" class="link-light text-decoration-none" tabindex="0" data-bs-html=true data-bs-trigger="focus" data-bs-container="body" data-bs-placement="left" data-bs-toggle="popover" title="Dicas" data-bs-content="<strong>[0]</strong> Dê muito zoom;<br><strong>[1]</strong> Sequência numérica.">
                        <i class="far fa-question-circle align-middle h3 m-0"></i>
                    </a>

                    <a role="button" class="link-light ms-2 text-decoration-none" data-bs-dismiss="modal">
                        <i class="fas fa-times align-middle h3 m-0"></i>
                    </a>
                </div>

            </div>
            {{#if isDone}}
                <div id="{{name}}BodyDone" class="modal-body">
                    <div class="row justify-content-center text-center">
                        <h6>Módulo Finalizado</h6>
                        <h6>Informação Recuperada</h6>
                        
                        <div class="col-sm-6">

                            <table class="table table-secondary table-hover table-bordered text-center font-nasalization">
