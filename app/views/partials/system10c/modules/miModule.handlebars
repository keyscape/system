<div class="modal fade" id="{{name}}Module" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content border-custom {{specificClass}}">
            <div class="modal-header border-custom {{specificClass}} justify-content-center">
                <h4 class="modal-title text-center">{{name}}</h4>

                <div style="right: 3%; z-index: 10" class="position-absolute">
                    <a role="button" class="link-light text-decoration-none" tabindex="0" data-bs-html=true data-bs-trigger="focus" data-bs-container="body" data-bs-placement="left" data-bs-toggle="popover" title="Dicas" data-bs-content="<strong>[0]</strong> Arquivo 3: Informações;<br><strong>[1]</strong> Arquivo 4: E-mails e Chamadas.">
                        <i class="far fa-question-circle align-middle h3 m-0"></i>
                    </a>

                    <a role="button" class="link-light ms-2 text-decoration-none" data-bs-dismiss="modal">
                        <i class="fas fa-times align-middle h3 m-0"></i>
                    </a>
                </div>

            </div>
            {{#if isDone}}
                <div id="{{name}}BodyDone" class="modal-body">
                    <div class="row justify-content-center text-center">
                        <h6>Módulo Finalizado</h6>
                        <h6>Informação Recuperada</h6>
                        
                        <div class="col-sm-6">

                            <table class="table table-secondary table-hover table-bordered text-center font-nasalization">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">Nome</th>
                                        <th scope="col">E-mail</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    {{#each @root.miModuleContent.res}}
                                        <tr>
                                            <td>{{this.name}}</td>
                                            <td>{{this.email}}@expoente.com</td>
                                        </tr>
                                    {{/each}}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {{else}}
                <div id="{{name}}BodyNot" class="modal-body">

                    <div class="row justify-content-center text-center">

                        {{#each @root.miModuleContent.res}}
                            <div class="col-sm-2">

                                <h6>{{this.name}}</h6>

                                <input id="resMi{{@index}}" class="d-none" value="{{this.opt}}">

                                {{#each @root.miModuleContent.alt}}
                                    <div class="form-floating form-floating-sm mb-2">
                                        <select class="form-select form-select-mi" id="floatingSelectMi{{@../index}}{{@index}}" onchange="miChange({{@index}}, {{@../index}}, this.value)">
                                            
                                            <option value="-1" selected></option>

                                            {{#each this.opt}}
                                                <option value="{{@index}}">{{this}}</option>
                                            {{/each}}
                                        </select>
                                        <label class="label-mi" for="floatingSelectMi{{@../index}}{{@index}}">{{this.name}}</label>
                                    </div>
                                {{/each}}

                            </div>

                        {{/each}}

                    </div>

                    <button id="buttonMiSubmit" type="button" class="btn btn-sm btn-outline-light my-3" onclick="miSubmit()">Enviar</button>

                    <h5 id="countdownMi" class="d-none">10</h5>

                </div>

                <div id="{{name}}BodyDone" class="modal-body d-none">
                    <div class="row justify-content-center text-center">
                        <h6>Módulo Finalizado</h6>
                        <h6>Informação Recuperada</h6>
                        
                        <div class="col-sm-6">

                            <table class="table table-secondary table-hover table-bordered text-center font-nasalization">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">Nome</th>
                                        <th scope="col">E-mail</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    {{#each @root.miModuleContent.res}}
                                        <tr>
                                            <td>{{this.name}}</td>
                                            <td>{{this.email}}@expoente.com</td>
                                        </tr>
                                    {{/each}}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            {{/if}}
        </div>
    </div>
</div> 