<div class="modal fade" id="{{name}}Module" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-custom {{specificClass}}">
            <div class="modal-header border-custom {{specificClass}} justify-content-center">
                <h4 class="modal-title text-center">{{name}}</h4>

                <div style="right: 3%; z-index: 10" class="position-absolute">
                    <a role="button" class="link-light" data-bs-dismiss="modal">
                        <i class="fas fa-times align-middle h3 m-0"></i>
                    </a>
                </div>
            </div>

            {{#if isDone}}
                <div id="{{name}}BodyDone" class="modal-body">
                    <div class="row justify-content-center text-center" style="font-size: 25px">
                        <h6>Módulo Finalizado</h6>
                        <h6>Informação Recuperada</h6>
                        <img class="img-fluid" src="/system10/assets/kappa/done.jpg">
                    </div>
                </div>

            {{else}}

                <div id="{{name}}BodyNot" class="modal-body">

                    <div class="position-absolute" style="right: 1%; top: 1%; z-index: 10">
                        <button class="btn btn-lg btn-outline-light" onclick="kappaReset()">
                            <i class="fas fa-redo-alt"></i>
                        </button>
                    </div>

                    <div class="row justify-content-center text-center mx-0" style="font-size: 25px">

                        <div class="col-3 ps-0 pe-0">
                            <input type="checkbox" class="btn-check" id="btn-check-kappa-1" autocomplete="off" onchange="kappaCheck(1)">
                            <label class="btn btn-outline-check" id="label-check-kappa-1" for="btn-check-kappa-1">
                                <img class="img-fluid" src="/system10/assets/kappa/diode.png">
                                <img class="img-fluid" src="/system10/assets/kappa/snand.png">
                            </label>
                        </div>

                        <div class="col-3 ps-0 pe-0">
                            <input type="checkbox" class="btn-check" id="btn-check-kappa-2" autocomplete="off" onchange="kappaCheck(2)">
                            <label class="btn btn-outline-check" id="label-check-kappa-2" for="btn-check-kappa-2">
                                <img class="img-fluid" src="/system10/assets/kappa/or.png">
                                <img class="img-fluid" src="/system10/assets/kappa/c.png">
                            </label>
                        </div>

                        <div class="col-3 ps-0 pe-0">
                            <input type="checkbox" class="btn-check" id="btn-check-kappa-3" autocomplete="off" onchange="kappaCheck(3)">
                            <label class="btn btn-outline-check" id="label-check-kappa-3" for="btn-check-kappa-3">
                                <img class="img-fluid" src="/system10/assets/kappa/ac.png">
                                <img class="img-fluid" src="/system10/assets/kappa/dc.png">
                            </label>
                        </div>

                        <div class="w-100"></div>

                        <div class="col-3 ps-0 pe-0">
                            <input type="checkbox" class="btn-check" id="btn-check-kappa-4" autocomplete="off" onchange="kappaCheck(4)">
                            <label class="btn btn-outline-check" id="label-check-kappa-4" for="btn-check-kappa-4">
                                <img class="img-fluid" src="/system10/assets/kappa/mosfet.png">
                                <img class="img-fluid" src="/system10/assets/kappa/ac.png">
                            </label>
                        </div>

                        <div class="col-3 ps-0 pe-0">
                            <input type="checkbox" class="btn-check" id="btn-check-kappa-5" autocomplete="off" onchange="kappaCheck(5)" checked disabled>
                            <label class="btn btn-outline-check" id="label-check-kappa-5" for="btn-check-kappa-5">
                                <img class="img-fluid" src="/system10/assets/kappa/lnand.png">
                            </label>
                        </div>

                        <div class="col-3 ps-0 pe-0">
                            <input type="checkbox" class="btn-check" id="btn-check-kappa-6" autocomplete="off" onchange="kappaCheck(6)">
                            <label class="btn btn-outline-check" id="label-check-kappa-6" for="btn-check-kappa-6">
                                <img class="img-fluid" src="/system10/assets/kappa/c.png">
                                <img class="img-fluid" src="/system10/assets/kappa/not.png">
                            </label>
                        </div>

                        <div class="w-100"></div>

                        <div class="col-3 ps-0 pe-0">
                            <input type="checkbox" class="btn-check" id="btn-check-kappa-7" autocomplete="off" onchange="kappaCheck(7)">
                            <label class="btn btn-outline-check" id="label-check-kappa-7" for="btn-check-kappa-7">
                                <img class="img-fluid" src="/system10/assets/kappa/l.png">
                                <img class="img-fluid" src="/system10/assets/kappa/or.png">
                            </label>
                        </div>

                        <div class="col-3 ps-0 pe-0">
                            <input type="checkbox" class="btn-check" id="btn-check-kappa-8" autocomplete="off" onchange="kappaCheck(8)">
                            <label class="btn btn-outline-check" id="label-check-kappa-8" for="btn-check-kappa-8">
                                <img class="img-fluid" src="/system10/assets/kappa/dc.png">
                                <img class="img-fluid" src="/system10/assets/kappa/not.png">
                            </label>
                        </div>

                        <div class="col-3 ps-0 pe-0">
                            <input type="checkbox" class="btn-check" id="btn-check-kappa-9" autocomplete="off" onchange="kappaCheck(9)">
                            <label class="btn btn-outline-check" id="label-check-kappa-9" for="btn-check-kappa-9">
                                <img class="img-fluid" src="/system10/assets/kappa/mosfet.png">
                                <img class="img-fluid" src="/system10/assets/kappa/diode.png">
                            </label>
                        </div>

                    </div>
                </div>

                <div id="{{name}}BodyDone" class="modal-body d-none">
                    <div class="row justify-content-center text-center" style="font-size: 25px">
                        <h6>Módulo Finalizado</h6>
                        <h6>Informação Recuperada</h6>
                        <img class="img-fluid" src="/system10/assets/kappa/done.jpg">
                    </div>
                </div>

            {{/if}}
        </div>
    </div>
</div> 

