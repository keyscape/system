
<div class="modal fade" id="OmegaModule" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h4 class="modal-title text-center">Omega</h4>
            </div>
            {{#if isDone}}
                <div id="omegaBodyDone" class="modal-body">
                    <div class="row justify-content-center text-center" style="font-size: 25px">
                        <h4>Módulo Finalizado</h4>
                    </div>
                </div>
            {{else}}
                <div id="omegaBodyNot" class="modal-body font-nasalization">


                    <div id="omegaContent" class="row justify-content-center text-center" style="font-size: 25px">
                        <div id="divOmegaContent" class="col-sm-10 h5 mb-3">
                            {{{this.[0]}}}
                        </div>


                        <div class="col-sm-8">
                            <button id="buttonOmegaSubmit1" type="button" class="btn btn-outline-light my-2 w-100" onclick="omegaSubmit(1)">{{{this.[1]}}}</button>
                        </div>

                        <div class="col-sm-8">
                            <button id="buttonOmegaSubmit2" type="button" class="btn btn-outline-light my-2 w-100" onclick="omegaSubmit(2)">{{{this.[2]}}}</button>
                        </div>

                        <div class="col-sm-8">
                            <button id="buttonOmegaSubmit3" type="button" class="btn btn-outline-light my-2 w-100" onclick="omegaSubmit(3)">{{{this.[3]}}}</button>
                        </div>

                        <div class="col-sm-8">
                            <button id="buttonOmegaSubmit4" type="button" class="btn btn-outline-light my-2 w-100" onclick="omegaSubmit(4)">{{{this.[4]}}}</button>
                        </div>



                    </div>

                    <div id="omegaLoading" class="row justify-content-center text-center d-none">
                        <div class="spinner-grow text-light mx-2" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <div class="spinner-grow text-light mx-2" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <div class="spinner-grow text-light mx-2" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <h6 class="mt-3">Aguardando outras<br>respostas</h6>
                    </div>


                </div>

                <div id="omegaBodyDone" class="modal-body d-none">
                    <div class="row justify-content-center text-center" style="font-size: 25px">
                        <h4>Módulo Finalizado</h4>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>