{{> system10c/navbarLog user}}

<div style="height: 100vh; padding-top: 3.5rem;">
    <div class="container-fluid h-100">

        <div class="row justify-content-center mt-3 font-nasalization">

            <div class="col-lg-3 mb-2">
                <div class="form-floating">
                    <input name="code" class="form-control form-control-custom font-nasalization" id="floatingCode" placeholder="C칩digo">
                    <label class="label-custom" for="floatingCode">C칩digo</label>
                    <div class="invalid-tooltip">
                        C칩digo Inv치lido
                    </div>
                </div>
            </div>

            <div class="col-lg-2 mb-2">
                <button class="btn btn-light w-100 h-100" onclick="joinGroup()">Entrar</button>
            </div>

            <div id="divGroupsContent" class="row justify-content-center mt-3">

                {{#each allGroups}}
                    <div class="col-6 col-lg-3 my-2">
                        <a role="button" class="card-box card-box-module border-custom rounded" style="background-color: rgba(0, 0, 0, 0.5);" href="/room10c/group/{{codeGroup}}">
                            <div class="card-box-title">
                                G#{{numGroup}}
                            </div>
                            <div class="card-box-caption">
                                <div class="caption-head">
                                    {{date}}
                                </div>
                                <div class="caption-body">
                                    {{codeGroup}}
                                </div>
                            </div>
                        </a>
                    </div>
                {{/each}}


            </div>

        </div>

    </div>
</div>



